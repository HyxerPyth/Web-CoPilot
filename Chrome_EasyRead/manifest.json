
{
    "manifest_version": 2,
    "name": "Copy Page Extension",
    "version": "1.0",
    "description": "An extension to copy the entire page content.",
    "permissions": ["activeTab", "storage"],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "index.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  